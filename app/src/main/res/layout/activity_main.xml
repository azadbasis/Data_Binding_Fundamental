<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="dataSource"
            type="com.me.databinding.DataSource" />
        <variable
            name="includeSource"
            type="com.me.databinding.DataSource" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dataSource.message}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <fragment
            android:id="@+id/data_fragment"
            android:name="com.me.databinding.DataFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <include
            layout="@layout/include_view"
            app:includeSource="@{includeSource}" />

        <include layout="@layout/data_view" />
    </LinearLayout>
</layout>